# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="Hair Salon Ecosystem"
APP_VERSION="1.0.0"
API_PREFIX=v1
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/hair_salon_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL=http://localhost:3000/v1/auth/google/callback

# Apple OAuth
APPLE_CLIENT_ID=""
APPLE_TEAM_ID=""
APPLE_KEY_ID=""
APPLE_PRIVATE_KEY=""
APPLE_CALLBACK_URL=http://localhost:3000/v1/auth/apple/callback

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3001,exp://

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=60000
DB_CREATE_TIMEOUT=30000
DB_DESTROY_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_REAP_INTERVAL=1000
DB_CREATE_RETRY_INTERVAL=200

# Optional Third-party Services
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

SENDGRID_API_KEY=""

TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""

REPLICATE_API_KEY=""

REVENUECAT_API_KEY=""

# Redis Configuration (for future use)
REDIS_HOST=localhost
