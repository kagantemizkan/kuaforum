# ==============================================
# Hair Salon Ecosystem - Environment Variables
# ==============================================

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="Hair Salon Ecosystem"
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL="postgresql://hair_salon_user:hair_salon_password@localhost:5432/hair_salon_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis Configuration (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ==============================================
# Third-Party Service Integrations
# ==============================================

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# SendGrid (Email Service)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME="Hair Salon Ecosystem"

# Twilio (SMS Service)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Replicate (AI Service)
REPLICATE_API_KEY=your_replicate_api_key
REPLICATE_MODEL_ID=stability-ai/sdxl:39ed52f2a78e934b3ba6e2a89f5b1c712de7dfea535525255b1aa35c5565e08b

# RevenueCat (Subscription Management)
REVENUECAT_API_KEY=your_revenuecat_api_key
REVENUECAT_WEBHOOK_SECRET=your_revenuecat_webhook_secret

# Expo (Push Notifications)
EXPO_ACCESS_TOKEN=your_expo_access_token

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# ==============================================
# Frontend Configuration
# ==============================================

# Frontend URLs (for CORS and redirects)
FRONTEND_URL=http://localhost:3001
ADMIN_FRONTEND_URL=http://localhost:3002

# ==============================================
# Security Configuration
# ==============================================

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3001,http://localhost:3000,http://frontend:3000"

# Session Configuration
SESSION_SECRET="your-session-secret-change-in-production"

# Encryption Keys
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# ==============================================
# Monitoring & Logging
# ==============================================

# Log Level (error, warn, log, debug, verbose)
LOG_LEVEL=debug

# Enable Request Logging
ENABLE_REQUEST_LOGGING=true

# ==============================================
# Development & Testing
# ==============================================

# Seed Database on Startup
SEED_DATABASE=true

# Enable Swagger Documentation
ENABLE_SWAGGER=true

# Mock Third-Party Services in Development
MOCK_THIRD_PARTY_SERVICES=false

# ==============================================
# Production Specific
# ==============================================

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Database Connection Pool
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=60000

# Cache TTL (in seconds)
CACHE_TTL=3600

# API Rate Limiting (production values)
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Feature Flags
# ==============================================

# Enable/Disable Features
FEATURE_AI_SUGGESTIONS=true
FEATURE_QR_CODES=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_REVIEWS=true

# ==============================================
# Business Configuration
# ==============================================

# Default Subscription Tier
DEFAULT_SUBSCRIPTION_TIER=FREE

# Loyalty Points Configuration
LOYALTY_POINTS_PER_DOLLAR=1
LOYALTY_POINTS_EXPIRY_DAYS=365

# Booking Configuration
MAX_BOOKING_DAYS_ADVANCE=90
MIN_BOOKING_HOURS_ADVANCE=2
DEFAULT_BOOKING_DURATION=60

# AI Configuration
MAX_AI_REQUESTS_PER_HOUR=10
AI_PROCESSING_TIMEOUT=30000

# QR Code Configuration
QR_CODE_EXPIRY_DAYS=30
MAX_QR_CODE_USES=1000